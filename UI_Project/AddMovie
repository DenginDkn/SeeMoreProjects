    private void AddButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_AddButtonActionPerformed
       String title= TitleText.getText().toString();
       String Length= LengthText.getText().toString();
       String name= NameText.getText().toString();
       String selectedValue = RatingCombo.getSelectedItem().toString();
       String Year= YearText.getText().toString();
       String Description= DescriptionText.getText().toString();
       
       try {
           FileWriter writer = new FileWriter("C:\\Users\\pc\\Documents\\NetBeansProjects\\DD\\src\\TermProject\\movies.txt",true);
           writer.write(title);
           writer.write(" ");
           writer.write(Length);
           writer.write(" ");
           writer.write(name);
           writer.write(" ");
           writer.write(selectedValue);
           writer.write(" ");
           writer.write(Year);
           writer.write(" ");
           writer.write(Description);
           writer.write("\n");
           writer.close();
          
           
           JOptionPane.showMessageDialog(rootPane, "Successfully Added");
           
       }
        catch(Exception e){
            JOptionPane.showMessageDialog(rootPane, "Try Again");
            
        }
    }//GEN-LAST:event_AddButtonActionPerformed

